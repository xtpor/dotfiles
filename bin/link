#!/bin/sh
# Setup symlink for config files

root=$( cd $(dirname $0); cd ..; pwd -P )

mkdir -p ~/.config/fish
mkdir -p ~/.config/nvim

ln -s "$root/config.fish" ~/.config/fish/config.fish
ln -s "$root/dot.gitconfig" ~/.gitconfig
ln -s "$root/dot.tmux.conf" ~/.tmux.conf
ln -s "$root/init.vim" ~/.config/nvim/init.vim
